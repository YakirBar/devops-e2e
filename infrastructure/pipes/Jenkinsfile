pipeline {
    agent {
        label 'inbound-agent'
    }

    stages {
        stage('Docker Images') {
            steps {
                sh 'docker images'
            }
        }
        stage('Docker Tag') {
            steps {
                sh 'docker tag nginx:latest yakirbartech/devops-e2e:nginx'
            }
        }
        stage('List Docker Images') {
            steps {
                sh 'docker images'
            }
        }
        stage('Docker Push') {
            steps {
                sh 'docker push yakirbartech/devops-e2e:nginx'
            }
        }
    }
}
