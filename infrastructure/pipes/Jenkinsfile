pipeline {
    agent {
        label 'inbound-agent'
    }

    stages {
        stage('Test') {
            steps {
                sh 'python3 ./infrastructure/scripts/google_check.py'
            }
        }
        stage('Hello') {
            when {
                expression {
                    // Only run this stage if the previous stage was successful
                    return currentBuild.description == "Google is alive!"
                }
            }
            steps {
                echo 'Hello World'
            }
        }
    }
}
 